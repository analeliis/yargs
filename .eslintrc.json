{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["sonarjs"],
  "extends": ["eslint:recommended", "plugin:sonarjs/recommended"],
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-implicit-globals": "warn",
    "complexity": ["warn", 8],
    "max-depth": ["warn", 3],
    "sonarjs/cognitive-complexity": ["warn", 10]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "coverage/",
    "docs/",
    "**/*.ts",
    "**/*.d.ts",
    "test/",         
    "test/deno/"
  ]
}
